{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Conan Debug Build",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/Debug/generators/conan_toolchain.cmake",
        "CMAKE_C_FLAGS": "-g -O0 -fprofile-arcs -ftest-coverage -fprofile-update=atomic",
        "CMAKE_CXX_FLAGS": "-DSPDLOG_ACTIVE_LEVEL=SPDLOG_LEVEL_DEBUG -g -O0 -fprofile-arcs -ftest-coverage -fprofile-update=atomic",
        "CMAKE_EXE_LINKER_FLAGS": "--coverage",
        "CMAKE_SHARED_LINKER_FLAGS": "--coverage"
      }
    },
    {
      "name": "diagnostic",
      "displayName": "ASan Debug Build (AddressSanitizer)",
      "inherits": "debug",
      "binaryDir": "${sourceDir}/build/Diagnostic",
      "cacheVariables": {
        "CMAKE_C_FLAGS": "-fsanitize=address -fno-omit-frame-pointer",
        "CMAKE_CXX_FLAGS": "-DSPDLOG_ACTIVE_LEVEL=SPDLOG_LEVEL_DEBUG -fsanitize=address -fno-omit-frame-pointer",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address",
        "CMAKE_SHARED_LINKER_FLAGS": "-fsanitize=address"
      }
    },
    {
      "name": "release",
      "displayName": "Conan Release Build",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/Release/generators/conan_toolchain.cmake",
        "CMAKE_CXX_FLAGS": "-DSPDLOG_ACTIVE_LEVEL=SPDLOG_LEVEL_INFO"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "jobs": 0
    },
    {
      "name": "diagnostic",
      "configurePreset": "diagnostic",
      "jobs": 0
    },
    {
      "name": "release",
      "configurePreset": "release",
      "jobs": 0
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}